page{
  height: 100%;
}
.background{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.topicname{
  width: 50%;
  height: 11%;
  position: absolute;
  display: flex;
  top: 14%;
  left: 28%;
  background-color: rgb(247,247,247);
  color: rgb(105,184,81);
  justify-content: center;
  align-items: center;
  z-index: 1;
}
.topicname .name{
  font-size: 60rpx;
  font-style: normal;
  font-weight: bold;
  /* font-family: 楷体; */
}
.topic{
  width: 40%;
  height: 30%;
  position: absolute;
  top: 33%;
  left: 33%;
  z-index: 1;
}
.topic .img{
  width: 100%;
  height: 80%;
  position: absolute;
  border-radius: 20rpx;
}
.topic .name{
  width: 100%;
  height: 20%;
  position: absolute;
  top: 80%;
  text-align: center
}

.base{
  width: 100%;
  height: 30%;
  position: absolute;
  top: 70%;
}
.base .img{
  width: 100%;
  height: 100%;
  position: absolute;
}
.base .opta{
  width: 25%;
  height: 100%;
  position: absolute;
  left: 0;
  border: none;
  background-color: transparent
}
.base .optb{
  width: 25%;
  height: 100%;
  position: absolute;
  left: 25%;
  border: none;
  background-color: transparent
}
.base .optc{
  width: 25%;
  height: 100%;
  position: absolute;
  left: 50%;
  border: none;
  background-color: transparent
}
.base .optd{
  width: 25%;
  height: 100%;
  position: absolute;
  left: 75%;
  border: none;
  background-color: transparent
}
.hide{
  display: none
}
.tooltip{
  width: 70%;
  height: 60%;
  position: absolute;
  top: 15%;
  left: 15%;
  z-index: 2;
}
.tooltip .background{
  width: 100%;
  height: 100%;
  background-size: 100%;
  border-radius: 20rpx;
}
.tooltip .pic{
  width: 35%;
  height: 20%;
  position: absolute;
  top: 20%;
  left: 20%;
  background-size: 100%;
  border-radius: 20rpx;
}
.tooltip .name{
  width: 35%;
  height: 10%;
  position: absolute;
  top: 40%;
  left: 20%;
  display: flex;
  align-content: center;
  justify-content: center;
  font-weight: bold;
}
.tooltip .detail{
  width: 70%;
  height: 20%;
  top: 52%;
  left: 5%;
  position: absolute;
  font-size: 30rpx;
}
.tooltip .next{
  width: 30%;
  height: 6%;
  top: 73%;
  left: 23%;
  position: absolute;
  font-size: 27rpx;
  line-height: 200%;
  background-color: rgb(98,204,103);
  font-weight: bold;
  padding: 0;
}
.tooltip .judge{
  width: 50%;
  height: 6%;
  top: 85%;
  left: 5%;
  position: absolute;
  font-size: 25rpx;
  color: red;
}