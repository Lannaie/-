}
.background{
width: 100%;
height:100%;
position: absolute;
z-index: -1;
}
.grade{
width: 50%;
height: 50%;
border-color: red;
position: absolute;
top: 10%;
left: 25%;
}
.grade .before{
width: 100%;
height: 5%;
position: absolute;
top: 0%;
left: 0%;
font-weight: bold;
color: green
}
.grade .score{
width: 100%;
height: 20%;
position: absolute;
top: 10%;
left: 0;
color: red;
display: flex;
align-content: center;
justify-content: center;
font-size: 100rpx;
font-weight: bolder;
}
.grade .comfort{
width: 100%;
height: 5%;
position: absolute;
top: 40%;
left: 0%;
color: green;
text-align: center;
font-size: 30rpx;
font-weight: bold
}
.return{
width: 20%;
height: 5%;
position: absolute;
top: 40%;
left: 40%;
font-size: 37rpx;
font-weight: bold;
line-height: 200%;
background-color: rgb(0,178,106);
}